# Database (Use MongoDB Atlas for production)
MONGODB_URI=mongodb://localhost:27017/work-dashboard

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port (Railway/Render will set this automatically)
PORT=3000

# Node Environment
NODE_ENV=development

# Puppeteer Configuration (for containerized deployments)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# WhatsApp Integration (set to 'true' to disable WhatsApp in production)
DISABLE_WHATSAPP=false